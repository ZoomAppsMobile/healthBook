<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

    <LinearLayout
        android:id="@+id/bottom_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/profileToolbar"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:gravity="center"
                        android:visibility="visible">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/imagePeopleChat"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile"
                            app:riv_oval="true" />

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/chat_backround_see_profile"
                            android:layout_alignTop="@+id/imagePeopleChat"
                            android:layout_alignStart="@+id/imagePeopleChat" />
                    </RelativeLayout>

                       </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="80"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/nameSurnameChatPeople"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="90"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Имя Фамилия"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <ImageView
                            android:visibility="visible"
                            android:id="@+id/not_selected"
                            android:layout_width="0dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:layout_weight="7"
                            android:background="@drawable/circle_img_gray_not_selected" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/selected_whith_gray"
                            android:layout_width="0dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:layout_weight="7"
                            android:background="@drawable/circle_image_gray_selected" />

                        <ImageView
                            android:layout_marginRight="2dp"
                            android:visibility="gone"
                            android:id="@+id/selected_green"
                            android:layout_width="0dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:layout_weight="5"
                            android:background="@drawable/circle_image_green_selected" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/experienceDocSubscription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:text="Опыт работы:"
                            android:textColor="@android:color/darker_gray" />
                        />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>