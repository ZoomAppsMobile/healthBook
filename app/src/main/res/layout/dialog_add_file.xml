<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_rect_white"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="500sp"
                android:layout_height="1sp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorGray"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:textSize="22dp"
                android:text="Добавить файл"
                android:textColor="#58B537"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20sp"
                android:background="#58B537"/>















            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/imageView1"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/gallery" />

                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"

                    android:textColor="#DDDDDD"
                    android:textAlignment="center"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Фото" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/videoLayout"

                    android:padding="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"

                    app:srcCompat="@drawable/video" />

                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="10sp"

                    android:textColor="#DDDDDD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Видео" />
                </LinearLayout>



            </LinearLayout>















            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20sp"
                android:padding="10dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/fileLayout"

                    android:orientation="vertical"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/myfile" />

                    <TextView
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10sp"
                        android:id="@+id/imageView3"

                        android:textColor="#DDDDDD"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Файл" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/anaLisLayout"

                    android:padding="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/analize" />

                    <TextView
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginTop="10sp"
                        android:id="@+id/imageView4"

                        android:textColor="#DDDDDD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Анализ" />
                </LinearLayout>



            </LinearLayout>












            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <Button
                    android:id="@+id/clickBtnCancelEvent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="50"
                    android:background="@drawable/border_btn_white"
                    android:text="Отмена" />

                <Button
                    android:id="@+id/clickBtnSaveEvent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="50"
                    android:background="@drawable/border_btn_green"
                    android:text="Далее" />


            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>