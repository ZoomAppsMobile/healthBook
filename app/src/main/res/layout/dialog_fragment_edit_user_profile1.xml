<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="14dp"
            android:text="Персональные данные:"
            android:textColor="@color/light_gray"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:paddingLeft="14dp"
                    android:text="Имя:"
                    android:textColor="@color/colorBlackLow2"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/nameProfileEdit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:background="@drawable/drawable_linear_background"
                    android:hint="Имя"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:paddingLeft="14dp"
                    android:text="Фамилия:"
                    android:textColor="@color/colorBlackLow2"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/surnameProfileEdit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:background="@drawable/drawable_linear_background"
                    android:hint="Фамилия"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:paddingLeft="14dp"
                    android:text="Отчество:"
                    android:textColor="@color/colorBlackLow2"
                    android:textSize="18dp" />


                <EditText
                    android:id="@+id/middleameProfileEdit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:background="@drawable/drawable_linear_background"
                    android:hint="Отчество"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="20"
                    android:paddingLeft="14dp"
                    android:text="Пол:"
                    android:textColor="@color/colorBlackLow2"
                    android:textSize="18dp" />

                <LinearLayout
                    android:id="@+id/arrow_spinner_gender"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:background="@drawable/drawable_linear_background"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnerEditProfile"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_weight="4"
                        android:background="@android:color/transparent"
                        android:paddingTop="7dp" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_arrow_look_down" />

                    />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="20"
                    android:paddingLeft="14dp"
                    android:text="Дата рождения:"
                    android:textColor="@color/colorBlackLow2"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/birthdateProfileEdit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:background="@drawable/drawable_linear_background"
                    android:hint="Дата рождения"
                    android:inputType="date"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:paddingLeft="14dp"
                    android:text="Рост:"
                    android:textColor="@color/colorBlackLow2"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/heightProfileEdit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:background="@drawable/drawable_linear_background"
                    android:hint="Рост"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:paddingLeft="14dp"
                    android:text="Вес:"
                    android:textColor="@color/colorBlackLow2"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/weightProfileEdit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:background="@drawable/drawable_linear_background"
                    android:hint="Вес"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:paddingLeft="14dp"
                    android:text="Прошлые болезни:"
                    android:textColor="@color/colorBlackLow2"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/pastIlnessesProfileEdit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:background="@drawable/drawable_linear_background"
                    android:hint="Прошлые болезни"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:paddingLeft="14dp"
                    android:text="Аллергия:"
                    android:textColor="@color/colorBlackLow2"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/allergyDiseasesProfileEdit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:background="@drawable/drawable_linear_background"
                    android:hint="Аллергия"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:paddingLeft="14dp"
                    android:text="Хронические заболевания:"
                    android:textColor="@color/colorBlackLow2"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/chronicDiseasesProfileEdit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:background="@drawable/drawable_linear_background"
                    android:hint="Хронические заболевания"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="20"
                    android:paddingLeft="14dp"
                    android:text="Группа крови:"
                    android:textColor="@color/colorBlackLow2"
                    android:textSize="18dp" />

                <LinearLayout
                    android:id="@+id/arrow_spinner_blood"

                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:background="@drawable/drawable_linear_background"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/bloodGroupProfileEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_weight="4"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingTop="7dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_gray" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_arrow_look_down" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="20"
                    android:gravity="start"
                    android:paddingLeft="14dp"
                    android:text="Наследственные заболевания:"
                    android:textColor="@color/colorBlackLow2"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/heredityProfileEdit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:background="@drawable/drawable_linear_background"
                    android:hint="Наследственные заболевания"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="20"
                    android:gravity="start"
                    android:paddingLeft="14dp"
                    android:text="Плохие привычки:"
                    android:textColor="@color/colorBlackLow2"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/badhabitsProfileEdit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:background="@drawable/drawable_linear_background"
                    android:hint="Плохие привычки"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="20"
                    android:gravity="start"
                    android:paddingLeft="14dp"
                    android:text="Домашний телефон:"
                    android:textColor="@color/colorBlackLow2"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/homePhoneProfileEdit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:paddingLeft="5dp"
                    android:background="@drawable/drawable_linear_background"
                    android:hint="Домашний телефон"
                    android:imeOptions="actionSend"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:visibility="gone"
                android:id="@+id/clickBtnSaveProfileEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/bpGreen"
                android:text="сохранить"></Button>

            <!--<Button-->
                <!--android:id="@+id/clickBtnExitProfileEdit"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_margin="10dp"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@color/dark_blue"-->
                <!--android:text="выйти"></Button>-->
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>