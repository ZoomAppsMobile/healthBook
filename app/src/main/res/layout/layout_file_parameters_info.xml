<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
             android:layout_marginTop="50dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="Вес"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14sp"/>
                <EditText
                    android:id="@+id/ed_new_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:padding="10dp"
                    android:hint="Вес"
                    android:textStyle="normal"
                    android:textColor="#000"
                    android:textSize="14sp"/>
                <Button
                    android:id="@+id/btn_send_new_weight"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="Рост"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14sp"/>
                <EditText
                    android:id="@+id/ed_new_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:padding="10dp"
                    android:hint="Рост"
                    android:textStyle="normal"
                    android:textColor="#000"
                    android:textSize="14sp"/>
                <Button
                    android:id="@+id/btn_send_new_height"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_add_parameter"
                android:background="@drawable/dotted_gray_corner"
                android:layout_width="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Добавить Параметр"
                    android:padding="10dp"
                    android:textColor="@color/bpGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="120"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Итого"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textColor="#58B537"
                        android:layout_weight="40"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Вес (кг)"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textColor="#58B537"
                        android:layout_weight="40"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Рост (см)"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textColor="#58B537"
                        android:layout_weight="40"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#58B537"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_parameters"

                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>





            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>