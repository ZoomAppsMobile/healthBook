<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@drawable/bg_round_rect_white"
              android:orientation="vertical">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:text="Изменения пароля"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorGray"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv1"
                android:layout_centerVertical="true"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_lock"/>
            <EditText
                android:id="@+id/old_password_ED"
                android:layout_toRightOf="@id/iv1"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:background="@color/transparent_background"
                android:textSize="16dp"
                android:hint="Старый пароль"
                android:textColor="@color/light_black_text_color"
                android:textColorHint="@color/text_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/text_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv2"
                android:layout_centerVertical="true"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_lock"/>
            <EditText
                android:id="@+id/new_password_ED"
                android:layout_toRightOf="@id/iv2"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:background="@color/transparent_background"
                android:textSize="16dp"
                android:hint="Новый пароль"
                android:textColor="@color/light_black_text_color"
                android:textColorHint="@color/text_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="60"
        android:orientation="horizontal">
        <Button
            android:layout_weight="30"
            android:id="@+id/clickBtnCancelEvent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/gray_color"
            android:text="Отмена"/>

        <Button
            android:layout_weight="30"
            android:id="@+id/clickBtnOkEvent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/bpGreen"
            android:text="применить"/>
    </LinearLayout>
</LinearLayout>