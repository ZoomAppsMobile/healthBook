<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_round_rect_white"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Редактирование"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorGray"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/titleETcalendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:hint="Название"
                    android:padding="10sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />

                <EditText
                    android:id="@+id/descriptionETcalendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/border"
                    android:hint="Коментарии"
                    android:padding="10sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />


                <EditText
                    android:id="@+id/quantityDrugsSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/border"
                    android:hint="Количество таблеток"
                    android:inputType="number"
                    android:maxLength="2"
                    android:padding="10sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />


                <EditText
                    android:id="@+id/durationSpinner"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/border"
                    android:hint="Количество дней"
                    android:inputType="number"
                    android:maxLength="2"
                    android:padding="10sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />

                <EditText
                    android:id="@+id/periodSpinner"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/border"
                    android:hint="Количество раз"
                    android:inputType="number"
                    android:maxLength="2"
                    android:padding="10sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray" />


                <TextView
                    android:id="@+id/admissiontimeETcalendar"
                    android:text="Время приема"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:paddingTop="10dp"
                    android:layout_marginTop="10sp"

                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/light_black_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/startDate_ED"
                    android:text="Дата начала"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:paddingTop="10dp"
                    android:layout_marginTop="10sp"

                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/light_black_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <Button
                    android:id="@+id/clickBtnCancelEvent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="50"
                    android:background="@drawable/border_btn_white"
                    android:text="Отмена" />

                <Button
                    android:id="@+id/clickBtnSaveEvent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="50"
                    android:background="@drawable/border_btn_green"
                    android:text="сохранить" />


            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>