<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_rect_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:text="Выберите фильтр поиска"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorGray"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:padding="10dp"
            android:id="@+id/news_chBox_Feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/bpGreen"
            android:checked="false"
            android:fontFamily="monospace"
            android:text="Новости"
            android:textAllCaps="true"
            android:textColor="@color/bpGreen"
            android:textColorLink="@color/bpGreen"
            android:textCursorDrawable="@color/bpGreen"
            android:textDirection="anyRtl"
             />

        <CheckBox
            android:clickable="true"
            android:padding="10dp"
            android:id="@+id/status_chBox_Feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/bpGreen"
            android:checked="false"
            android:fontFamily="monospace"
            android:text="Cтатусы"
            android:textAllCaps="true"
            android:textColor="@color/bpGreen"
            android:textColorLink="@color/bpGreen"
            android:textCursorDrawable="@color/bpGreen"
            android:textDirection="anyRtl"
           />

    </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:background="@drawable/gray_corner_bg"
        android:padding="10dp"
        android:textColor="@color/bpGreen"
        android:id="@+id/allCompilationBtnDialog"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:text="вся подборка"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="60"
        android:orientation="horizontal">
        <Button
            android:layout_weight="30"
            android:id="@+id/clickBtnCancelEvent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/gray_color"
            android:text="Отмена"/>

        <Button
            android:layout_weight="30"
            android:id="@+id/clickBtnFilterFeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/bpGreen"
            android:text="применить"/>
    </LinearLayout>
</LinearLayout>